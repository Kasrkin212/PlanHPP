                 RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.62890625}"
                 CommandParameter="10"/>
            <ImageButton x:Name="SN2" Style="{StaticResource ButtonStyleMiddle}"
                 RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.148125}"
                 RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.4640625}"
                 CommandParameter="11"/>
            <ImageButton x:Name="CN1A" Style="{StaticResource ButtonStyleMiddle}"            
