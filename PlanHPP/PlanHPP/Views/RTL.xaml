<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanHPP.Pages.RTL">
  <ContentView.Content>
        <RelativeLayout x:Name="RTLT" x:FieldModifier="public" WidthRequest="600" HeightRequest="480" class="static">
            <RelativeLayout.Resources>
                <ResourceDictionary>
                    <Style x:Key="ButtonStyleLittle" TargetType="ImageButton">
                        <Setter Property="Source" Value="ElectroMotor.jpg" />
                        <Setter Property="RelativeLayout.WidthConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.04}" />
                        <Setter Property="RelativeLayout.HeightConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.045}" />
                        <Setter Property="Command" Value="{Binding ChangeLableMethod}" />

                        <Setter Property="VisualStateManager.VisualStateGroups">
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="0.8" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </Setter>
                    </Style>
                    <Style x:Key="ButtonStyleMiddle" TargetType="ImageButton">
                        <Setter Property="Source" Value="CirkNasos.png" />
                        <Setter Property="RelativeLayout.WidthConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.08}" />
                        <Setter Property="RelativeLayout.HeightConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.085}" />
                        <Setter Property="Command" Value="{Binding ChangeLableMethod}" />
                        <Setter Property="BackgroundColor" Value="Transparent" />

                        <Setter Property="VisualStateManager.VisualStateGroups">
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="0.8" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </Setter>
                    </Style>
                    <Style x:Key="ButtonStyleHigh" TargetType="ImageButton">
                        <Setter Property="Source" Value="Pan.jpg" />
                        <Setter Property="RelativeLayout.WidthConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.08}" />
                        <Setter Property="RelativeLayout.HeightConstraint" Value="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.10}" />
                        <Setter Property="Command" Value="{Binding ChangeLableMethod}" />

                        <Setter Property="VisualStateManager.VisualStateGroups">
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="1" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Scale"
                                                        Value="0.8" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </Setter>
                    </Style>

                </ResourceDictionary>
            </RelativeLayout.Resources>

            <Image x:Name="ShemaToTGOne" 
                 Source="ShemaToTGOneTested.jpg"
                 RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                 Aspect="AspectFit"  
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"/>

            <ImageButton x:Name="RB1" Style="{StaticResource ButtonStyleLittle}"
                 RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.014375}"
                 RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.034375}"
                 CommandParameter="1"/>
