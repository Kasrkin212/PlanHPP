                 RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.04296875}"
                 CommandParameter="17"/>
            <Image x:Name="ButtonPressedLittle" x:FieldModifier="public" Source="ElectroMotorPressed.jpg"
                 RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.04}"
                 RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.045}"            
                 Scale="0"/>
            <Image x:Name="ButtonPressedMiddle" x:FieldModifier="public" Source="CirkNasosPressed.jpg"
                 RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Width, Factor=0.04}"
                 RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToView, ElementName=ShemaToTGOne, Property=Height, Factor=0.045}"            
